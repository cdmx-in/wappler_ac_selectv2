{
    "components": [
        {
            "type": "dmx-select2",
            "selector": "dmx-select2, [is=dmx-select2]",
            "groupTitle": "Forms",
            "groupIcon": "fa fa-lg fa-file-text-o",
            "title": "Select 2: @@id@@",
            "icon": "fa fa-lg fa-caret-square-o-down",
            "state": "opened",
            "anyParent": true,
            "template": '<select id="@@id@@" is="dmx-select2" class="form-select">\n</select>',
            "baseName": "select2",
            "help": "Select2 component for data display",
            "dataScheme": [],
            "outputType": "object",
            "dataPick": true,
            "properties": [],
            "children": [],
            "allowed_children": {},
            "copyFiles": [
                {
                    "src": "dmx-select2.js",
                    "dst": "js/dmx-select2.js"
                },
                {
                  "src": "../../../node_modules/select2/dist/js/select2.full.min.js",
                  "dst": "js/select2.full.min.js"
                },
                {
                  "src": "../../../node_modules/select2/dist/css/select2.min.css",
                  "dst": "css/select2.min.css"
                },
                {
                  "src": "../../../node_modules/select2/dist/js/i18n/he.js",
                  "dst": "js/i18n/he.js"
                },
                {
                  "src": "../../../node_modules/select2-bootstrap-5-theme/dist/select2-bootstrap-5-theme.min.css",
                  "dst": "css/select2-bootstrap-5-theme.min.css"
                }
            ],
            "linkFiles": [
                {
                    "src": "js/dmx-select2.js",
                    "type": "js",
                    "defer": true
                },
                {
                    "src": "js/select2.full.min.js",
                    "type": "js",
                    "defer": true
                },
                {
                    "src": "js/i18n/he.js",
                    "type": "js",
                    "defer": true
                },
                {
                    "src": "css/select2.min.css",
                    "type": "css"
                },
                {
                    "src": "css/select2-bootstrap-5-theme.min.css",
                    "type": "css"
                }
            ],
            "cssOrder": [],
            "jsOrder": []
        }
    ],
    "attributes": [
    {
      "name": "select2Placeholder",
      "attributeStartsWith": "dmx-bind",
      "attribute": "field_placeholder",
      "title": "Placeholder",
      "type": "boolean",
      "display": "fieldset",
      "icon": "fa fa-lg fa-check-square",
      "groupTitle": "Input",
      "groupIcon": "fa fa-lg fa-pencil",
      "defaultValue": false,
      "show": [
        "select2PlaceholderConfig"
      ],
      "noChangeOnHide": true,
      "groupEnabler": true,
      "children": [
        {
          "name": "select2PlaceholderConfig",
          "attributeStartsWith": "dmx-bind",
          "attribute": "field_placeholder",
          "isValue": true,
          "dataBindings": true,
          "title": "Placeholder:",
          "type": "text",
          "help": "Select a Theme for the Select2",
          "defaultValue": "",
          "initDisplay": "none"
        }
      ],
    "allowedOn": {
        "dmx-select2": true
      }
    },
    {
      "name": "select2Theme",
      "attributeStartsWith": "dmx-bind",
      "attribute": "field_themes",
      "title": "Theme",
      "type": "boolean",
      "display": "fieldset",
      "icon": "fa fa-lg fa-paint-brush",
      "groupTitle": "Configs",
      "groupIcon": "fa fa-lg fa-cog"
      "defaultValue": false,
      "show": [
        "select2ThemeConfigs"
      ],
      "noChangeOnHide": true,
      "groupEnabler": true,
      "children": [
        {
            "name": "select2ThemeConfigs",
            "attribute": "field_theme",
            "title": "Theme",
            "type": "droplist",
            "defaultValue": 'bootstrap-5',
            "values": [
              {title: 'Default', value: 'default'},
            {title: 'Classic', value: 'classic'},
            {title: 'Bootstrap 5', value: 'bootstrap-5'},
            {title: 'Custom', value: 'custom'}
            ],
            "help": "Select a theme for the select2 field"
        },
      ],
    "allowedOn": {
        "dmx-select2": true
      }
    },
    {
      "name": "select2Width",
      "attributeStartsWith": "dmx-bind",
      "attribute": "field_widths",
      "title": "Width",
      "type": "boolean",
      "display": "fieldset",
      "icon": "fa fa-lg fa-check-square",
      "groupTitle": "Configs",
      "groupIcon": "fa fa-lg fa-cog"
      "defaultValue": false,
      "show": [
        "select2WidthConfigs"
      ],
      "noChangeOnHide": true,
      "groupEnabler": true,
      "children": [
        {
            "name": "select2WidthConfigs",
            "attribute": "field_width",
            "title": "Width",
            "type": "droplist",
            "defaultValue": 'resolve',
            "values": [
            { "title": "Resolve", "value": "resolve" },
                { "title": "Element", "value": "element" },
                { "title": "Style", "value": "style" },
                { "title": "100%", "value": "100%" },
                { "title": "50%", "value": "50%" },
                { "title": "200px", "value": "200px" },
                { "title": "300px", "value": "300px" }
            ],
            "help": "Set Width Config"
        },
      ],
    "allowedOn": {
        "dmx-select2": true
      }
    },
    {
      "name": "select2CssClass",
      "attributeStartsWith": "dmx-bind",
      "attribute": "css_classes",
      "title": "Size Class",
      "type": "boolean",
      "display": "fieldset",
      "icon": "fa fa-lg fa-check-square",
      "groupTitle": "Configs",
      "groupIcon": "fa fa-lg fa-cog"
      "defaultValue": false,
      "show": [
        "select2CssClassConfigs"
      ],
      "noChangeOnHide": true,
      "groupEnabler": true,
      "children": [
        {
            "name": "select2CssClassConfigs",
            "attribute": "css_class",
            "title": "Size Class",
            "type": "droplist",
            "defaultValue": 'select2--large',
            "values": [
            { "title": "Large", "value": "select2--large" },
                { "title": "Small", "value": "select2--small" },
                { "title": "Custom", "value": "select2--custom" }
            ],
            "help": "Set Size Config"
        },
      ],
    "allowedOn": {
        "dmx-select2": true
      }
    },
    {
      "name": "select2Rtl",
      "attributeStartsWith": "dmx-bind",
      "attribute": "enable_rtl",
      "title": "RTL",
      "type": "boolean",
      "icon": "fa fa-lg fa-align-right",
      "groupTitle": "Configs",
      "groupIcon": "fa fa-lg fa-cog"
      "defaultValue": false,
      "help": "This option enables right-to-left (RTL) text direction for the Select2 element.",
      "allowedOn": {
        "dmx-select2": true
      }
    },
    {
      "name": "select2CloseOnSelect",
      "attributeStartsWith": "dmx-bind",
      "attribute": "close_on_select",
      "title": "Close On Select",
      "type": "boolean",
      "icon": "fa fa-lg fa-toggle-on",
      "groupTitle": "Configs",
      "groupIcon": "fa fa-lg fa-cog"
      "defaultValue": true,
      "help": "Controls whether the dropdown is closed after a selection is made.",
      "allowedOn": {
        "dmx-select2": true
      }
    },
    {
      "name": "select2SelectOnClose",
      "attributeStartsWith": "dmx-bind",
      "attribute": "select_on_close",
      "title": "Select On Close",
      "type": "boolean",
      "icon": "fa fa-lg fa-check-circle",
      "groupTitle": "Configs",
      "groupIcon": "fa fa-lg fa-cog"
      "defaultValue": false,
      "help": "Implements automatic selection when the dropdown is closed.",
      "allowedOn": {
        "dmx-select2": true
      }
    },
    {
      "name": "select2Tags",
      "attributeStartsWith": "dmx-bind",
      "attribute": "enable_tags",
      "title": "Tags",
      "type": "boolean",
      "icon": "fas fa-star",
      "groupTitle": "Configs",
      "groupIcon": "fa fa-lg fa-cog"
      "defaultValue": false,
      "help": "Dynamically create new options from text input by the user in the search box.",
      "allowedOn": {
        "dmx-select2": true
      }
    },
    {
      "name": "allowClear",
      "attributeStartsWith": "dmx-bind",
      "attribute": "allow_clear",
      "title": "Allow Clear",
      "type": "boolean",
      "icon": "fas fa-times",
      "groupTitle": "Configs",
      "groupIcon": "fa fa-lg fa-cog"
      "defaultValue": false,
      "help": "Allow clearing the Selected value.",
      "allowedOn": {
        "dmx-select2": true
      }
    },
    {
      "name": "searchThreshold",
      "attributeStartsWith": "dmx-bind",
      "attribute": "search_threshold",
      "title": "Search Box",
      "type": "boolean",
      "display": "fieldset",
      "icon": "fa fa-lg fa-search",
      "groupTitle": "Accessibility",
      "groupIcon": "fa fa-lg fa-universal-access",
      "defaultValue": false,
      "show": [
        "searchThresholdConfig"
      ],
      "noChangeOnHide": true,
      "groupEnabler": true,
      "children": [
        {
          "name": "searchThresholdConfig",
          "attributeStartsWith": "dmx-bind",
          "attribute": "minimum_results_for_search",
          "dataBindings": true,
          "title": "Min Results for Search:",
          "type": "number",
          "help": "Minimum number of results required to show the search box. Set to 0 to always show search (recommended for keyboard accessibility). Set to -1 or Infinity to hide search.",
          "defaultValue": 0,
          "initDisplay": "none"
        }
      ],
      "allowedOn": {
        "dmx-select2": true
      }
    },
    {
      "name": "customCss",
      "attribute": "custom_css",
      "title": "Custom CSS Options",
      "type": "boolean",
      "display": "fieldset",
      "icon": "fas fa-palette",
      "groupTitle": "Configs",
      "groupIcon": "fa fa-lg fa-cog",
      "defaultValue": false,
      "noChangeOnHide": true,
      "groupEnabler": true,
      "children": [
        {
          "name": "selectionCss",
          "attribute": "selection_css",
          "title": "Selection CSS Class",
          "type": "text",
          "defaultValue": "",
          "help": "Additional class for the selection area"
        },
        {
          "name": "dropdownCss",
          "attribute": "dropdown_css",
          "title": "Dropdown CSS Class",
          "type": "text",
          "defaultValue": "",
          "help": "Additional class for the dropdown"
        },
        {
          "name": "containerCss",
          "attribute": "container_css",
          "title": "Container CSS Class",
          "type": "text",
          "defaultValue": "",
          "help": "Additional class for the outer container"
        }
      ],
      "allowedOn": {
        "dmx-select2": true
      }
    }
    ],
    "events": [
    {
      "name": "dmx-selectv2-selected",
      "attributeStartsWith": "dmx-on",
      "attribute": "selected",
      "display": "fieldset",
      "title": "Selected",
      "icon": "fa fa-lg fa-chevron-right",
      "groupTitle": "Select Events",
      "groupIcon": "fa fa-lg fa-toggle-on",
      "defaultValue": false,
      "show": [
        "selectOpened",
        "selectSelected",
        "selectClosed"
      ],
      "noChangeOnHide": true,
      "type": "boolean",
      "groupEnabler": true,
      "children": [
        {
          "name": "selectSelected",
          "attributeStartsWith": "dmx-on",
          "attribute": "selected",
          "isValue": true,
          "actionsPicker": true,
          "title": "Action:",
          "type": "text",
          "help": "Choose the action to execute.",
          "defaultValue": "",
          "initDisplay": "none"
        }
      ],
      "allowedOn": {
        "dmx-select2": true
      }
    },
    {
      "name": "dmx-selectv2-opened",
      "attributeStartsWith": "dmx-on",
      "attribute": "opened",
      "display": "fieldset",
      "title": "Opened",
      "icon": "fa fa-lg fa-chevron-right",
      "groupTitle": "Select Events",
      "groupIcon": "fa fa-lg fa-toggle-on",
      "defaultValue": false,
      "show": [
        "selectOpened"
      ],
      "noChangeOnHide": true,
      "type": "boolean",
      "groupEnabler": true,
      "children": [
        {
          "name": "selectOpened",
          "attributeStartsWith": "dmx-on",
          "attribute": "opened",
          "isValue": true,
          "actionsPicker": true,
          "title": "Action:",
          "type": "text",
          "help": "Choose the action to execute.",
          "defaultValue": "",
          "initDisplay": "none"
        }
      ],
      "allowedOn": {
        "dmx-select2": true
      }
    },
    {
      "name": "dmx-selectv2-closed",
      "attributeStartsWith": "dmx-on",
      "attribute": "closed",
      "display": "fieldset",
      "title": "Closed",
      "icon": "fa fa-lg fa-chevron-right",
      "groupTitle": "Select Events",
      "groupIcon": "fa fa-lg fa-toggle-on",
      "defaultValue": false,
      "show": [
        "selectClosed"
      ],
      "noChangeOnHide": true,
      "type": "boolean",
      "groupEnabler": true,
      "children": [
        {
          "name": "selectClosed",
          "attributeStartsWith": "dmx-on",
          "attribute": "closed",
          "isValue": true,
          "actionsPicker": true,
          "title": "Action:",
          "type": "text",
          "help": "Choose the action to execute.",
          "defaultValue": "",
          "initDisplay": "none"
        }
      ],
      "allowedOn": {
        "dmx-select2": true
      }
    }
  ],
    "static_events": [],
    "actionsScheme": []
}